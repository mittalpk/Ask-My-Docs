# AskMyDocs Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@askmydocs-postgres:5432/postgres

# LLM Provider Configuration
LLM_PROVIDER=ollama   # options: openai, ollama

# Ollama Configuration (for local LLM)
OLLAMA_MODEL=nomic-embed-text   # or mistral, phi3, etc.
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_API_URL=http://ollama:11434

# OpenAI Configuration (if using OpenAI instead of Ollama)
OPENAI_API_KEY=your_openai_api_key_here

# Additional Configuration
# Add other environment variables as needed