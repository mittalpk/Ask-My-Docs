# AskMyDocs Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@askmydocs-postgres:5432/postgres

# LLM Provider Configuration
LLM_PROVIDER=ollama   # options: openai, ollama

# Ollama Configuration (for local LLM)
OLLAMA_MODEL=nomic-embed-text   # or mistral, phi3, etc.
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_API_URL=http://ollama:11434

# OpenAI Configuration (if using OpenAI instead of Ollama)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure Storage (if using cloud storage)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Additional Configuration
# Add other environment variables as needed